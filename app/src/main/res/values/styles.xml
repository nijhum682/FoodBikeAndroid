<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button Styles -->
    <style name="Widget.App.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Widget.App.Button.Danger" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/error</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- TextInputLayout Styles -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <!-- Dialog Styles -->
    <style name="Widget.App.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Title</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.Dialog.Text</item>
    </style>

    <style name="MaterialAlertDialog.Title" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.Button.Dialog" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.Button.Dialog.Text" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Progress Bar Styles -->
    <style name="Widget.App.ProgressBar" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/primary</item>
        <item name="trackColor">@color/light_gray</item>
    </style>

    <!-- Empty State Styles -->
    <style name="TextAppearance.App.EmptyState.Title" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.App.EmptyState.Message" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Loading Overlay -->
    <style name="Widget.App.LoadingOverlay" parent="">
        <item name="android:background">@color/white_70</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.App.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/surface</item>
        <item name="chipStrokeColor">@color/divider</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="checkedIconVisible">true</item>
    </style>

    <!-- Toolbar Styles -->
    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/primary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Bottom Navigation Styles -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="android:background">@color/surface</item>
        <item name="elevation">8dp</item>
    </style>
</resources>
